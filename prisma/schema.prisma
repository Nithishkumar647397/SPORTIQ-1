generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  passwordHash String

  role         String
  sport        String?

  name         String?
  dob          DateTime?
  gender       String?
  mobile       String?
  profilePic   String?
  height       Int?
  weight       Int?
  bloodgroup   String?
  address      String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}